{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "strict": false,
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "target": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "exclude": ["**/node_modules", "**/dist", "**/playground", "**/playgrounds"]
}
